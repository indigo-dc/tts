#!/bin/bash
DATA_DIR=~/.config/tts
BACKUPDIR=~/.config/tts_`date +%Y%m%d_%H%M%S`
CONF_FILE=_build/default/rel/tts/etc/tts.conf

if [ -d "$DATA_DIR" ]; then
    echo "storing backup of current config in $BACKUPDIR"
    mv "$DATA_DIR" "$BACKUPDIR"
fi

echo -n "copy configuration "
echo -n "."
mkdir -p $DATA_DIR
echo -n "."
cp $CONF_FILE $DATA_DIR
echo -n "."
echo " done"
