<html>
    <body>
        <h1>Welcome</h1>
        this is your user page, you are logged in as {{ username }}.
        {% if credential_list %}
        <table>
        {% for id, description in credential_list %}
            <tr>
            <form method="post" action="{{ ep_user }}">
            <input type="hidden" name="id" value="{{ id }}" >
            <input type="hidden" name="action" value="revoke" >
                <td> {{ description }}  </td> 
                <td> <button type="submit">Revoke</button></td> 
            </form> 
            </tr>
        {% endfor %}
        </table>
        {% else %}
        You do not have any credentials
        {% endif %}
        <br>
        {% if service_list %}
        <table>
        {% for id,type,host, description in service_list %}
            <tr>
            <form method="post" action="{{ ep_user }}">
            <input type="hidden" name="id" value="{{ id }}" >
            <input type="hidden" name="action" value="request" >
                <td> {{ type }}  </td> 
                <td> {{ host }}  </td> 
                <td> {{ description }}  </td> 
                <td> <button type="submit">Request</button></td> 
            </form> 
            </tr>
        {% endfor %}
        </table>
        {% else %}
        You are not able to request any credentials 
        {% endif %}
        <br>
        <form method="post" action="{{ ep_user }}">
        <input type="hidden" name="action" value="logout" >
        <button type="submit">Logout</button> 
        </form> 
    </body>
</html>
